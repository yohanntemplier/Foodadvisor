{% extends 'layoutAdmin.html.twig' %}

{% block title %}Restaurant index{% endblock %}

{% block body %}
<div class="jumbotron-admin-restaurant">
<div class ="container text-center justify-content-center">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <h1 class="text text-center mt-3 mb-5">Liste des restaurants référencés</h1>
    <a href="{{ path('admin_restaurant_new') }}" class="btn btn-primary mb-5">Ajouter un nouveau restaurant</a>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Type de cuisine</th>
                <th>Ville</th>
                <th>Site</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.name }}</td>
                <td>{{ restaurant.type }}</td>
                <td>{{ restaurant.city }}</td>
                <td>{{ restaurant.site }}</td>
                <td>
                    <a href="{{ path('admin_restaurant_edit', {'id': restaurant.id}) }}" class="btn btn-secondary">Editer</a>
                    {{ include('admin/restaurant/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun restaurant enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
{% endblock %}
