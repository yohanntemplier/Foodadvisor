{% extends 'layoutAdmin.html.twig' %}

{% block title %}Paiement index{% endblock %}

{% block body %}
    <div class="jumbotron-admin-restaurant">
        <div class ="container text-center justify-content-center">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            <h1 class="text text-center mt-3 mb-5">Liste des moyens de paiement</h1>
            <a href="{{ path('admin_paiement_new') }}" class="btn btn-primary mb-5">Ajouter un nouveau moyen de paiement</a>


            <table class="table table-striped table-dark">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for paiement in paiements %}
                    <tr>
                        <td>{{ paiement.name }}</td>
                        <td>
                            <a href="{{ path('admin_paiement_edit', {'id': paiement.id}) }}" class="btn btn-secondary">Editer</a>
                            {{ include('admin/paiement/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucun moyen de paiement enregistr√©</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
