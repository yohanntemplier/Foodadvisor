{% form_theme form 'bootstrap_4_layout.html.twig' %}
<div class="container form p-4">
    {{ form_start(form) }}
    <div class="row justify-content-center">
        <div class="col-md-6 mt-4 mb-4">
            {{ form_label(form.name, 'Nom de la caractéristique') }}
            {{ form_widget(form.name) }}
        </div>
    </div>

    <div class="form-row justify-content-center text-center m-2">
        <button type="submit" class="btn btn-primary btn-lg">
            {{ button_label|default('sauvegarder') }}
        </button>
    </div>
    <a href="{{ path('admin_caracteristic_index') }}" class="btn-return btn-primary btn-lg">
        Retour à la liste des caractéristiques
    </a>
{{ form_end(form) }}