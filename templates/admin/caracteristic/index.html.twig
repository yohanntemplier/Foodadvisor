{% extends 'layoutAdmin.html.twig' %}

{% block title %}Caracteristic index{% endblock %}

{% block body %}
<div class="jumbotron-admin-restaurant">
    <div class ="container text-center justify-content-center">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <h1 class="text text-center mt-3 mb-5">Liste des caractéristiques</h1>
        <a href="{{ path('admin_caracteristic_new') }}" class="btn btn-primary mb-5">Ajouter une nouvelle caractéristique</a>


        <table class="table table-striped table-dark">
            <thead>
            <tr>
                <th>Nom</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
        {% for caracteristic in caracteristics %}
            <tr>
                <td>{{ caracteristic.name }}</td>
                <td>
                    <a href="{{ path('admin_caracteristic_edit', {'id': caracteristic.id}) }}" class="btn btn-secondary">Editer</a>
                    {{ include('admin/caracteristic/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune caractéristique enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
