{% extends 'layoutAdmin.html.twig' %}

{% block title %}Comment not active{% endblock %}

{% block body %}
    <div class="jumbotron-admin-restaurant">
        <div class ="container text-center justify-content-center">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            <h1 class="text text-center mt-3 mb-5">Liste des Commentaires en attente</h1>
            <table class="table table-striped table-dark">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Message</th>
                    <th>Date</th>
                    <th>Note</th>
                    <th>Est-il en ligne ?</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for comment in comments %}
                    <tr>
                        <td>{{ comment.pseudo }}</td>
                        <td>{{ comment.message }}</td>
                        <td>{{ comment.date ? comment.date|date('Y-m-d') : '' }}</td>
                        <td>{{ comment.note }}</td>
                        <td>{{ comment.isActive ? 'Oui' : 'Non' }}</td>
                        <td>
                            <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}" class="btn btn-secondary">mettre en ligne </a>
                            {{ include('admin/comment/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">Aucun commentaires en attente</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="pagination justify-content-center">
            {{ knp_pagination_render(comments) }}
        </div>
    </div>

{% endblock %}